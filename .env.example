# ========================================
# WordPress Template Environment Configuration
# ========================================
# Copy this file to .env and update the values for your environment
# Never commit .env to version control - it contains sensitive information

# ========================================
# DATABASE CONFIGURATION
# ========================================
# MySQL database settings
MYSQL_ROOT_PASSWORD=super_secure_root_password_here
MYSQL_DATABASE=wordpress_dev
MYSQL_USER=wp_user
MYSQL_PASSWORD=secure_database_password_here

# ========================================
# WORDPRESS DATABASE CONNECTION
# ========================================
# These should match the MySQL settings above
WORDPRESS_DB_NAME=wordpress_dev
WORDPRESS_DB_USER=wp_user
WORDPRESS_DB_PASSWORD=secure_database_password_here
WORDPRESS_DB_HOST=mysql

# ========================================
# WORDPRESS SITE CONFIGURATION
# ========================================
# Site URL and basic settings
WORDPRESS_URL=http://localhost:8000
WORDPRESS_TITLE=WordPress Development Site
WORDPRESS_ADMIN_USER=admin
WORDPRESS_ADMIN_PASSWORD=admin_secure_password_here
WORDPRESS_ADMIN_EMAIL=admin@example.local

# ========================================
# WORDPRESS SECURITY KEYS & SALTS
# ========================================
# Generate unique values at: https://api.wordpress.org/secret-key/1.1/salt/
# These must be unique for security - never use the defaults below
WORDPRESS_AUTH_KEY=put_your_unique_phrase_here
WORDPRESS_SECURE_AUTH_KEY=put_your_unique_phrase_here
WORDPRESS_LOGGED_IN_KEY=put_your_unique_phrase_here
WORDPRESS_NONCE_KEY=put_your_unique_phrase_here
WORDPRESS_AUTH_SALT=put_your_unique_phrase_here
WORDPRESS_SECURE_AUTH_SALT=put_your_unique_phrase_here
WORDPRESS_LOGGED_IN_SALT=put_your_unique_phrase_here
WORDPRESS_NONCE_SALT=put_your_unique_phrase_here

# ========================================
# DEVELOPMENT SETTINGS
# ========================================
# Debug configuration for development
WP_DEBUG=true
WP_DEBUG_LOG=true
WP_DEBUG_DISPLAY=false

# DOCKER CONFIGURATION
# ========================================
# Container settings and port mappings
WORDPRESS_PORT=8000
MYSQL_PORT=3306

# ========================================
# OPTIONAL: ADDITIONAL CONFIGURATION
# ========================================
# Uncomment and modify as needed

# PHP Settings
# PHP_MEMORY_LIMIT=256M
# PHP_MAX_EXECUTION_TIME=300
# PHP_UPLOAD_MAX_FILESIZE=64M
# PHP_POST_MAX_SIZE=64M

# WordPress Additional Settings
# WP_CACHE=false
# WP_CACHE_KEY_SALT=your_cache_salt_here
# WORDPRESS_TABLE_PREFIX=wp_

# ========================================
# PRODUCTION OVERRIDES
# ========================================
# For production deployment, override these settings:
# WP_DEBUG=false
# WP_DEBUG_DISPLAY=false
# WORDPRESS_URL=https://yourdomain.com
# WORDPRESS_ADMIN_EMAIL=admin@yourdomain.com
